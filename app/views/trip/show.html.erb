<div class="jumbotron">

  <div class="row">
    <h1><%=@trip.name%></h1>

    <div class="col-md-6">
      <%= render partial: "adv_slider" %>
    </div>
      
    <div class="col-md-6">   
      <p><%=@trip.introduction%></p>
      <p><%=t("order.cost")%><b><%= @trip.cost %></b></p>

      <%= render partial: "next_trip", object: @next_trip %>
    </div>

    <center>
      <%= link_to t("order.new"), new_order_path(@trip, @date), :class=>"btn btn-lg btn-info" %>
    </center>
  </div>
</div>

<p>
  <%= @trip.description %>
</p> 
    
<center>
  <%= link_to t("order.new"), new_order_path(@trip, @date), :class=>"btn btn-lg btn-info" %>
